<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/img_detail_crypto_logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img_cryptocurrency"
                android:layout_marginStart="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="@id/img_detail_crypto_logo"
                app:layout_constraintStart_toEndOf="@id/img_detail_crypto_logo"
                app:layout_constraintBottom_toBottomOf="@id/img_detail_crypto_logo"
                >

                <TextView
                    android:id="@+id/tv_detail_title"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    tools:text="Bitcoin" />

                <TextView
                    android:id="@+id/tv_detail_price"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:textSize="20sp"
                    tools:text="$123.456" />
            </LinearLayout>
            <ImageView
                android:id="@+id/img_detail_star_logo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/img_star"
                android:layout_marginStart="12dp"
                app:layout_constraintBottom_toBottomOf="@id/img_detail_crypto_logo"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="12dp"
                app:layout_constraintTop_toTopOf="@id/img_detail_crypto_logo" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>